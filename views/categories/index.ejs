<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kategorie Turnieju - <%= tournament.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1>Kategorie Turnieju: <%= tournament.name %></h1>
                <p class="lead">Zarządzaj kategoriami turnieju</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Lista Kategorii</h5>
                        <a href="/tournaments/<%= tournament._id %>/categories/new" class="btn btn-success">Dodaj Kategorię</a>
                    </div>
                    <div class="card-body">
                        <% if (categories && categories.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nazwa</th>
                                            <th>Wiek</th>
                                            <th>Waga</th>
                                            <th>Płeć</th>
                                            <th>Uczestnicy</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categories.forEach(category => { %>
                                            <tr>
                                                <td><%= category.name %></td>
                                                <td>
                                                    <% if (category.ageMin && category.ageMax) { %>
                                                        <%= category.ageMin %>-<%= category.ageMax %> lat
                                                    <% } else { %>
                                                        Bez ograniczeń
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (category.weightMin && category.weightMax) { %>
                                                        <%= category.weightMin %>-<%= category.weightMax %> kg
                                                    <% } else { %>
                                                        Bez ograniczeń
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (category.gender === 'male') { %>
                                                        Mężczyźni
                                                    <% } else if (category.gender === 'female') { %>
                                                        Kobiety
                                                    <% } else { %>
                                                        Mieszane
                                                    <% } %>
                                                </td>
                                                <td><%= category.participants ? category.participants.length : 0 %></td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/tournaments/<%= tournament._id %>/categories/<%= category._id %>/brackets" class="btn btn-sm btn-outline-primary">Drabinki</a>
                                                        <a href="/admin/tournaments/<%= tournament._id %>/manage" class="btn btn-sm btn-outline-success">Zarządzaj</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <p class="text-muted">Brak kategorii w tym turnieju</p>
                                <a href="/tournaments/<%= tournament._id %>/categories/new" class="btn btn-primary">Dodaj Pierwszą Kategorię</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Akcje Masowe</h5>
                    </div>
                    <div class="card-body">
                        <form action="/tournaments/<%= tournament._id %>/assign-categories" method="POST">
                            <button type="submit" class="btn btn-warning">Automatycznie Przypisz Uczestników</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
