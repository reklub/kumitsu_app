<script>
// Start a match
function startMatch(matchId) {
  fetch(`/admin/tournaments/matches/${matchId}/start`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => {
    if (response.ok) {
      location.reload();
    } else {
      return response.json().then(data => {
        alert(data.error || 'B≈ÇƒÖd podczas rozpoczynania meczu');
      });
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('B≈ÇƒÖd podczas rozpoczynania meczu');
  });
}

// Finish a match and advance winner
function finishMatch(matchId) {
  const score1Input = document.getElementById(`score1_${matchId}`);
  const score2Input = document.getElementById(`score2_${matchId}`);
  const winnerSelect = document.getElementById(`winner_${matchId}`);
  
  const score1 = score1Input ? score1Input.value : '0';
  const score2 = score2Input ? score2Input.value : '0';
  const winner = winnerSelect ? winnerSelect.value : '';

  if (!winner) {
    alert('Proszƒô wybraƒá zwyciƒôzcƒô meczu');
    return;
  }

  console.log(`[finishMatch] Submitting match ${matchId} with winner ${winner}`);

  fetch(`/admin/tournaments/matches/${matchId}/result`, {
    method: 'PUT',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      score1: parseInt(score1),
      score2: parseInt(score2),
      winnerId: winner
    })
  })
  .then(response => {
    if (response.ok) {
      console.log(`[finishMatch] Match updated successfully, reloading page...`);
      // Wait a bit for backend to process, then reload
      setTimeout(() => {
        location.reload();
      }, 800);
    } else {
      return response.json().then(data => {
        console.error(`[finishMatch] Error:`, data);
        alert(data.error || 'B≈ÇƒÖd podczas zako≈Ñczenia meczu');
      });
    }
  })
  .catch(error => {
    console.error('[finishMatch] Network error:', error);
    alert('B≈ÇƒÖd podczas zako≈Ñczenia meczu');
  });
}

// Draw bracket connection lines (SVG)
function drawBracketLines() {
  console.log('[drawBracketLines] Starting...');
  
  const brackets = document.querySelectorAll('[id^="bracket-svg-"]');
  
  brackets.forEach(svg => {
    const categoryId = svg.id.replace('bracket-svg-', '');
    const bracketWrapper = document.getElementById(`bracket-${categoryId}`);
    
    if (!bracketWrapper) {
      console.warn(`[drawBracketLines] Bracket wrapper not found for category ${categoryId}`);
      return;
    }
    
    // Clear previous lines
    svg.innerHTML = '';
    
    // Get the scroll container's dimensions
    const parentContainer = bracketWrapper.parentElement;
    svg.setAttribute('viewBox', `0 0 ${parentContainer.scrollWidth} ${parentContainer.scrollHeight}`);
    svg.setAttribute('width', parentContainer.scrollWidth);
    svg.setAttribute('height', parentContainer.scrollHeight);
    
    const rounds = bracketWrapper.querySelectorAll('.bracket-round');
    if (rounds.length < 2) return;
    
    // Group for lines
    const g = document.createElementNS('http://www.w3.org/2000/svg', 'g');
    g.setAttribute('class', 'bracket-lines');
    
    let linesDrawn = 0;
    
    // For each pair of consecutive rounds
    for (let i = 0; i < rounds.length - 1; i++) {
      const currentRound = rounds[i];
      const nextRound = rounds[i + 1];
      
      const currentMatches = currentRound.querySelectorAll('.bracket-match');
      const nextMatches = nextRound.querySelectorAll('.bracket-match');
      
      currentMatches.forEach((currentMatch, matchIdx) => {
        // Check if match has a winner
        const winners = currentMatch.querySelectorAll('.bracket-participant.winner');
        if (winners.length === 0) return;
        
        // Calculate which next match this winner goes to
        const nextMatchIdx = Math.floor(matchIdx / 2);
        if (nextMatchIdx >= nextMatches.length) return;
        
        const nextMatch = nextMatches[nextMatchIdx];
        
        // Get positions
        const currentRect = currentMatch.getBoundingClientRect();
        const nextRect = nextMatch.getBoundingClientRect();
        const parentRect = parentContainer.getBoundingClientRect();
        
        // Convert to SVG coordinates
        const x1 = currentRect.right - parentRect.left + parentContainer.scrollLeft;
        const y1 = currentRect.top - parentRect.top + currentRect.height / 2 + parentContainer.scrollTop;
        const x2 = nextRect.left - parentRect.left + parentContainer.scrollLeft - 20;
        const y2 = nextRect.top - parentRect.top + nextRect.height / 2 + parentContainer.scrollTop;
        
        // Draw connecting curve with arrow
        const midX = (x1 + x2) / 2;
        const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        path.setAttribute('d', `M ${x1} ${y1} C ${midX} ${y1}, ${midX} ${y2}, ${x2} ${y2}`);
        path.setAttribute('stroke', '#10b981');
        path.setAttribute('stroke-width', '3');
        path.setAttribute('fill', 'none');
        path.setAttribute('stroke-linecap', 'round');
        path.setAttribute('stroke-linejoin', 'round');
        path.setAttribute('opacity', '0.7');
        
        g.appendChild(path);
        
        // Draw arrow
        const arrowSize = 8;
        const dx = x2 - x1;
        const dy = y2 - y1;
        const angle = Math.atan2(dy, dx);
        
        const arrow = document.createElementNS('http://www.w3.org/2000/svg', 'polygon');
        const arrowPoints = [
          [x2, y2],
          [x2 - arrowSize * Math.cos(angle - Math.PI / 6), y2 - arrowSize * Math.sin(angle - Math.PI / 6)],
          [x2 - arrowSize * Math.cos(angle + Math.PI / 6), y2 - arrowSize * Math.sin(angle + Math.PI / 6)]
        ];
        arrow.setAttribute('points', arrowPoints.map(p => p.join(',')).join(' '));
        arrow.setAttribute('fill', '#10b981');
        
        g.appendChild(arrow);
        
        linesDrawn++;
      });
    }
    
    svg.appendChild(g);
    console.log(`[drawBracketLines] Drew ${linesDrawn} lines for bracket ${categoryId}`);
  });
}

// Redraw lines after page updates
document.addEventListener('DOMContentLoaded', () => {
  console.log('[Tournament Live] Page loaded');
  
  // Initial draw
  setTimeout(() => drawBracketLines(), 200);
  
  // Auto-refresh bracket every 15 seconds
  setInterval(() => {
    fetch(window.location.href)
      .then(r => r.text())
      .then(html => {
        // Parse new HTML and check if any match statuses changed
        const parser = new DOMParser();
        const newDoc = parser.parseFromString(html, 'text/html');
        const oldMatches = document.querySelectorAll('.bracket-match');
        const newMatches = newDoc.querySelectorAll('.bracket-match');
        
        if (oldMatches.length === newMatches.length) {
          // Check if any statuses changed
          let changed = false;
          for (let i = 0; i < oldMatches.length; i++) {
            const oldStatus = oldMatches[i].querySelector('.bracket-status').className;
            const newStatus = newMatches[i].querySelector('.bracket-status').className;
            if (oldStatus !== newStatus) {
              changed = true;
              break;
            }
          }
          
          if (changed) {
            console.log('[Tournament Live] Bracket status changed, reloading...');
            location.reload();
          }
        }
      })
      .catch(err => console.warn('[Tournament Live] Auto-refresh error:', err));
  }, 15000);
});
</script>

