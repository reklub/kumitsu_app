<%- include('../partials/header') %>

<div class="tournament-live-container">
  <!-- Header Section -->
  <div class="live-view-header">
    <div class="container-fluid">
      <div class="d-flex justify-content-between align-items-center">
        <h2><i class="fas fa-trophy"></i> Turniej na ≈ºywo: <%= tournament.name %></h2>
        <div class="live-view-actions">
          <a href="/admin/tournaments/<%= tournament._id %>/brackets" class="btn btn-info">
            <i class="fas fa-sitemap"></i> Drabinki
          </a>
          <a href="/admin/tournaments/<%= tournament._id %>/manage" class="btn btn-secondary">
            <i class="fas fa-cog"></i> ZarzƒÖdzanie
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid mt-4">
    <!-- Sequential Fights View - All Fights in Order -->
    <% if (!categories || categories.length === 0) { %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Brak kategorii w turnieju
      </div>
    <% } else { %>
      <!-- Collect all matches from all categories and sort by match number -->
      <%
        let allMatches = [];
        categories.forEach(category => {
          if (category.matches && category.matches.length > 0) {
            category.matches.forEach(match => {
              allMatches.push({
                ...match,
                categoryName: category.name,
                categoryId: category._id
              });
            });
          }
        });
        allMatches.sort((a, b) => a.matchNumber - b.matchNumber);
      %>

      <!-- Sequential Fights Section -->
      <div class="sequential-fights-section mb-5">
        <h3 class="section-header"><i class="fas fa-list-ol"></i> Mecze w Kolejno≈õci</h3>
        
        <div class="fights-timeline">
          <% 
            const inProgressMatches = allMatches.filter(m => m.status === 'in_progress');
            const scheduledMatches = allMatches.filter(m => m.status === 'scheduled');
            const completedMatches = allMatches.filter(m => m.status === 'completed');
          %>

          <!-- IN PROGRESS -->
          <% inProgressMatches.forEach(match => { %>
            <div class="fight-card fight-in-progress" data-match-id="<%= match._id %>">
              <div class="fight-header">
                <div class="fight-number-circle">
                  <span class="fight-number"><%= match.matchNumber %></span>
                </div>
                <div class="fight-info-inline">
                  <div class="fight-category"><strong><%= match.categoryName %></strong> ‚Ä¢ Runda <%= match.round %></div>
                  <span class="fight-badge-inline bg-warning">üî¥ TRWA</span>
                </div>
              </div>

              <div class="fight-participants-inline">
                <div class="fight-p">
                  <input type="number" class="score-quick" id="score1_<%= match._id %>" value="<%= match.score1 || 0 %>" min="0">
                  <span class="fight-name">
                    <% if (match.participant1) { %>
                      <% if (match.participant1.beltRank) { %>
                        <span class="belt-dot" style="background-color: <%= match.participant1.beltRank.color %>;"></span>
                      <% } %>
                      <%= match.participant1.firstName %> <%= match.participant1.lastName %>
                    <% } else { %>
                      <span class="text-muted">TBD</span>
                    <% } %>
                  </span>
                </div>
                <div class="fight-p">
                  <input type="number" class="score-quick" id="score2_<%= match._id %>" value="<%= match.score2 || 0 %>" min="0">
                  <span class="fight-name">
                    <% if (match.participant2) { %>
                      <% if (match.participant2.beltRank) { %>
                        <span class="belt-dot" style="background-color: <%= match.participant2.beltRank.color %>;"></span>
                      <% } %>
                      <%= match.participant2.firstName %> <%= match.participant2.lastName %>
                    <% } else { %>
                      <span class="text-muted">TBD</span>
                    <% } %>
                  </span>
                </div>
              </div>

              <div class="fight-controls">
                <select class="fight-winner-select" id="winner_<%= match._id %>">
                  <option value="">Zwyciƒôzca...</option>
                  <% if (match.participant1) { %>
                    <option value="<%= match.participant1._id %>" <%= match.winner && match.winner._id.toString() === match.participant1._id.toString() ? 'selected' : '' %>>
                      <%= match.participant1.firstName %> <%= match.participant1.lastName %>
                    </option>
                  <% } %>
                  <% if (match.participant2) { %>
                    <option value="<%= match.participant2._id %>" <%= match.winner && match.winner._id.toString() === match.participant2._id.toString() ? 'selected' : '' %>>
                      <%= match.participant2.firstName %> <%= match.participant2.lastName %>
                    </option>
                  <% } %>
                </select>
                <button class="btn-finish-quick" onclick="finishMatch('<%= match._id %>')">‚úì KONIEC</button>
              </div>
            </div>
          <% }) %>

          <!-- SCHEDULED (Next Up) -->
          <% if (scheduledMatches.length > 0) { %>
            <div class="timeline-section-header">
              <i class="fas fa-arrow-down"></i> Nastƒôpnie
            </div>
            <% scheduledMatches.slice(0, 3).forEach(match => { %>
              <div class="fight-card fight-scheduled" data-match-id="<%= match._id %>">
                <div class="fight-header">
                  <div class="fight-number-circle">
                    <span class="fight-number"><%= match.matchNumber %></span>
                  </div>
                  <div class="fight-info-inline">
                    <div class="fight-category"><strong><%= match.categoryName %></strong> ‚Ä¢ Runda <%= match.round %></div>
                    <span class="fight-badge-inline bg-secondary">‚è±Ô∏è CZEKA</span>
                  </div>
                </div>

                <div class="fight-participants-inline">
                  <div class="fight-p">
                    <span class="fight-name">
                      <% if (match.participant1) { %>
                        <% if (match.participant1.beltRank) { %>
                          <span class="belt-dot" style="background-color: <%= match.participant1.beltRank.color %>;"></span>
                        <% } %>
                        <%= match.participant1.firstName %> <%= match.participant1.lastName %>
                      <% } else { %>
                        <span class="text-muted">TBD</span>
                      <% } %>
                    </span>
                  </div>
                  <div class="fight-p">
                    <span class="fight-name">
                      <% if (match.participant2) { %>
                        <% if (match.participant2.beltRank) { %>
                          <span class="belt-dot" style="background-color: <%= match.participant2.beltRank.color %>;"></span>
                        <% } %>
                        <%= match.participant2.firstName %> <%= match.participant2.lastName %>
                      <% } else { %>
                        <span class="text-muted">TBD</span>
                      <% } %>
                    </span>
                  </div>
                </div>

                <div class="fight-controls">
                  <button class="btn-start-quick" onclick="startMatch('<%= match._id %>')">‚ñ∂ START</button>
                </div>
              </div>
            <% }) %>
          <% } %>

          <!-- COMPLETED -->
          <% if (completedMatches.length > 0) { %>
            <div class="timeline-section-header completed-header">
              <i class="fas fa-check-circle"></i> Zako≈Ñczone
            </div>
            <div class="completed-collapse">
              <% completedMatches.forEach(match => { %>
                <div class="fight-card fight-completed" data-match-id="<%= match._id %>">
                  <div class="fight-header">
                    <div class="fight-number-circle">
                      <span class="fight-number"><%= match.matchNumber %></span>
                    </div>
                    <div class="fight-info-inline">
                      <div class="fight-category"><strong><%= match.categoryName %></strong> ‚Ä¢ Runda <%= match.round %></div>
                      <span class="fight-badge-inline bg-success">‚úì KONIEC</span>
                    </div>
                  </div>

                  <div class="fight-participants-inline">
                    <div class="fight-p <%= match.winner && match.winner._id.toString() === (match.participant1 ? match.participant1._id.toString() : '') ? 'winner-p' : '' %>">
                      <span class="fight-score"><%= match.score1 %></span>
                      <span class="fight-name">
                        <% if (match.winner && match.winner._id.toString() === (match.participant1 ? match.participant1._id.toString() : '')) { %>
                          üëë
                        <% } %>
                        <% if (match.participant1) { %>
                          <% if (match.participant1.beltRank) { %>
                            <span class="belt-dot" style="background-color: <%= match.participant1.beltRank.color %>;"></span>
                          <% } %>
                          <%= match.participant1.firstName %> <%= match.participant1.lastName %>
                        <% } else { %>
                          <span class="text-muted">TBD</span>
                        <% } %>
                      </span>
                    </div>
                    <div class="fight-p <%= match.winner && match.winner._id.toString() === (match.participant2 ? match.participant2._id.toString() : '') ? 'winner-p' : '' %>">
                      <span class="fight-score"><%= match.score2 %></span>
                      <span class="fight-name">
                        <% if (match.winner && match.winner._id.toString() === (match.participant2 ? match.participant2._id.toString() : '')) { %>
                          üëë
                        <% } %>
                        <% if (match.participant2) { %>
                          <% if (match.participant2.beltRank) { %>
                            <span class="belt-dot" style="background-color: <%= match.participant2.beltRank.color %>;"></span>
                          <% } %>
                          <%= match.participant2.firstName %> <%= match.participant2.lastName %>
                        <% } else { %>
                          <span class="text-muted">TBD</span>
                        <% } %>
                      </span>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Bracket Visualization with Winner Paths -->
      <% categories.forEach(category => { %>
        <% if (category.matches && category.matches.length > 0) { %>
          <!-- PROFESSIONAL BRACKET VIEW -->
          <div class="bracket-section mb-5">
            <h3 class="section-header"><i class="fas fa-sitemap"></i> Drabinka <%= category.name %></h3>
            
            <div class="bracket-container">
              <div class="bracket-svg-wrapper">
                <svg id="bracket-svg-<%= category._id %>" class="bracket-svg"></svg>
              </div>
              
              <div class="bracket-matches-wrapper" id="bracket-<%= category._id %>">
                <% category.rounds.forEach(round => { %>
                  <div class="bracket-round" data-round="<%= round.number %>" data-category="<%= category._id %>">
                    <div class="bracket-round-title"><strong><%= round.name %></strong></div>
                    
                    <div class="bracket-round-matches">
                      <% round.matches.forEach((match, matchIdx) => { %>
                        <div class="bracket-match" data-match-id="<%= match._id %>" data-match-idx="<%= matchIdx %>" data-round="<%= round.number %>">
                          <!-- Participant 1 -->
                          <div class="bracket-matchup">
                            <div class="bracket-participant <%= match.winner && match.winner._id && match.winner._id.toString() === (match.participant1 ? match.participant1._id.toString() : '') ? 'winner' : '' %>">
                              <div class="bracket-name">
                                <% if (match.participant1) { %>
                                  <span class="belt-rank" style="<% if (match.participant1.beltRank) { %>background-color: <%= match.participant1.beltRank.color %><% } %>"></span>
                                  <span><%= match.participant1.firstName %> <%= match.participant1.lastName %></span>
                                <% } else { %>
                                  <span class="tbd">TBD</span>
                                <% } %>
                              </div>
                              <div class="bracket-score"><%= match.score1 || '-' %></div>
                            </div>
                            
                            <!-- Divider -->
                            <div class="bracket-divider"></div>
                            
                            <!-- Participant 2 -->
                            <div class="bracket-participant <%= match.winner && match.winner._id && match.winner._id.toString() === (match.participant2 ? match.participant2._id.toString() : '') ? 'winner' : '' %>">
                              <div class="bracket-name">
                                <% if (match.participant2) { %>
                                  <span class="belt-rank" style="<% if (match.participant2.beltRank) { %>background-color: <%= match.participant2.beltRank.color %><% } %>"></span>
                                  <span><%= match.participant2.firstName %> <%= match.participant2.lastName %></span>
                                <% } else { %>
                                  <span class="tbd">TBD</span>
                                <% } %>
                              </div>
                              <div class="bracket-score"><%= match.score2 || '-' %></div>
                            </div>
                          </div>
                          
                          <!-- Match status indicator -->
                          <div class="bracket-status <%= match.status %>">
                            <% if (match.status === 'completed') { %>
                              <i class="fas fa-check"></i> Zako≈Ñczony
                            <% } else if (match.status === 'in_progress') { %>
                              <i class="fas fa-play"></i> Trwa
                            <% } else { %>
                              <i class="fas fa-clock"></i> Zaplanowany
                            <% } %>
                          </div>
                        </div>
                      <% }) %>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>
      <% }) %>
    <% } %>
  </div>
</div>

