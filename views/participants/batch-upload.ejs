<% layout('./layouts/boilerplate') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    body {
        background-color: #f5f7fa;
    }
    
    .batch-upload-container {
        max-width: 820px;
        margin: 0 auto;
        padding: 12px 12px;
    }
    
    .page-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        color: #ffffff;
        padding: 18px 14px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.06);
    }

    .page-header h1 {
        margin-bottom: 4px;
        font-size: 1.4rem;
        line-height: 1.2;
    }
    
    .page-header p {
        margin-bottom: 0;
        opacity: 0.95;
    }
    
    .card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 25px;
        border-radius: 8px;
    }
    
    .card-header {
        background-color: #0d6efd;
        color: #ffffff;
        border-radius: 8px 8px 0 0 !important;
        padding: 1.25rem;
        font-weight: 600;
        border: none;
    }
    
    .card-header i {
        margin-right: 8px;
    }
    
    .card-body {
        padding: 16px 16px;
    }
    
    .instructions-list {
        list-style: none;
        padding: 0;
        counter-reset: step-counter;
    }

    /* Use a simple, predictable flex layout for each instruction row
       so the numeric badge can't overlap or 'fly' when the text wraps. */
    .instructions-list li {
        counter-increment: step-counter;
        margin-bottom: 14px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }

    .instructions-list li::before {
        content: counter(step-counter);
        background-color: #0d6efd;
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        flex-shrink: 0;
    }
    
    .instructions-list li strong {
        display: block;
        margin-bottom: 5px;
        color: #333;
    }
    
    .field-list {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 6px;
        margin-top: 10px;
    }
    
    .field-list ul {
        margin-bottom: 0;
    }
    
    .field-list li {
        padding: 5px 0;
        color: #555;
    }
    
    .field-list strong {
        color: #333;
    }
    
    .example-table {
        background-color: white;
        padding: 0;
        border-radius: 6px;
        margin-top: 14px;
        overflow: auto;
        box-shadow: none;
    }
    
    .example-table-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        padding: 12px;
        background-color: #f8f9fa;
        border-radius: 6px 6px 0 0;
        margin: 0;
        font-size: 0.95rem;
    }
    
    .table-responsive {
        margin-bottom: 0;
    }
    
    .example-table table {
        margin-bottom: 0;
    }
    
    .example-table th {
        background-color: #0d6efd;
        color: #ffffff;
        font-weight: 600;
        padding: 12px;
        text-align: left;
    }
    
    .example-table td {
        padding: 8px 10px;
        border-bottom: 1px solid #dee2e6;
        font-size: 0.95rem;
    }
    
    .example-table tbody tr:last-child td {
        border-bottom: none;
    }
    
    .belt-ranks-section {
        background: linear-gradient(135deg, #e9fbff 0%, #f0fbff 100%);
        padding: 12px;
        border-radius: 6px;
        margin-top: 12px;
        border-left: 4px solid #0d6efd;
    }
    
    .belt-ranks-title {
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        display: block;
    }
    
    .badge-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .badge {
        padding: 5px 10px;
        font-size: 0.8rem;
        background-color: #0d6efd;
        color: #ffffff;
        border-radius: 16px;
    }
    
    .drag-drop-area {
        border: 2px dashed #0d6efd;
        border-radius: 8px;
        padding: 28px 18px;
        text-align: center;
        background-color: #ffffff;
        cursor: pointer;
        transition: all 0.18s ease;
        min-height: 160px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        max-width: 100%;
    }
    
    .drag-drop-area:hover {
        background-color: #f1fbff;
        border-color: #0b5ed7;
        box-shadow: 0 6px 14px rgba(13, 110, 253, 0.08);
    }
    
    .drag-drop-area.drag-over {
        background-color: #e6faff;
        border-color: #0b5ed7;
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.12);
    }
    
    .drag-drop-icon {
        font-size: 2.4rem;
        color: #0d6efd;
        margin-bottom: 12px;
    }
    
    .drag-drop-area h5 {
        margin-bottom: 8px;
        color: #333;
        font-weight: 600;
    }
    
    .drag-drop-area p {
        margin-bottom: 0;
        color: #666;
    }
    
    .file-selected-alert {
        background-color: #e6fff5;
        border: 1px solid #b6f0dc;
        color: #0b5e49;
        padding: 10px;
        border-radius: 6px;
        margin-top: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .file-selected-alert i {
        color: #0d6efd;
        font-size: 1.2rem;
    }
    
    .action-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        margin-top: 18px;
        align-items: center;
    }
    
    .btn-upload {
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        border: none;
        color: white;
        padding: 10px 14px;
        font-weight: 600;
        border-radius: 6px;
        transition: transform 0.14s, box-shadow 0.14s;
        width: 100%;
        text-align: center;
        font-size: 0.95rem;
    }
    
    .btn-upload:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 18px rgba(13, 110, 253, 0.15);
        color: #fff;
    }
    
    .btn-back {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        color: #212529;
        padding: 10px 14px;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.14s;
        width: 100%;
        text-align: center;
        font-size: 0.95rem;
    }
    
    .btn-back:hover {
        background-color: #dee2e6;
        color: #333;
        text-decoration: none;
    }
    
    .btn-download {
        display: inline-block;
        background-color: #0d6efd;
        color: white;
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.14s;
        margin-bottom: 12px;
        font-size: 0.95rem;
    }
    
    .btn-download:hover {
        background-color: #218838;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }
    
    .form-text {
        color: #999 !important;
        font-size: 0.85rem;
        margin-top: 8px;
    }
    
    @media (max-width: 576px) {
        .page-header {
            padding: 20px 0;
        }
        
        .page-header h1 {
            font-size: 1.25rem;
        }

        .card-body {
            padding: 12px;
        }

        .instructions-list li {
            /* Keep the flex layout but reduce spacing on small screens */
            gap: 8px;
        }

        .instructions-list li::before {
            width: 30px;
            height: 30px;
            font-size: 0.85rem;
        }

        .drag-drop-area {
            padding: 22px 12px;
            min-height: 130px;
        }

        .drag-drop-icon {
            font-size: 1.9rem;
            margin-bottom: 8px;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="batch-upload-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container-fluid">
            <h1><i class="fas fa-file-csv"></i> Import zbiorczy zawodników</h1>
            <p><strong><%= club.clubName %></strong> • <strong><%= tournament.name %></strong></p>
        </div>
    </div>

    <!-- Instructions Card -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-book"></i> Instrukcje
        </div>
        <div class="card-body">
            <ol class="instructions-list">
                <li>

                    <div flex-wrap="wrap">
                    <strong>Prepare your data</strong>
                    <p>Create a CSV file with columns: firstName, lastName, dateOfBirth, gender, weight, beltRank</p>
                    </div>
                
                    <div class="field-list" flex-wrap="wrap">
                        <ul>
                            <li><strong>firstName</strong> - Participant's first name</li>
                            <li><strong>lastName</strong> - Participant's last name</li>
                            <li><strong>dateOfBirth</strong> - Format: YYYY-MM-DD (e.g., 2005-03-15)</li>
                            <li><strong>gender</strong> - Either "male" or "female"</li>
                            <li><strong>weight</strong> - In kilograms (numeric, e.g., 75.5)</li>
                            <li><strong>beltRank</strong> - Allowed values shown below</li>
                        </ul>
                    </div>
                </li>
                <li>
                    <strong>Download template</strong>
                    <p>Use our template to ensure correct format</p>
                    <a href="/templates/participants-template.csv" class="btn-download" download>
                        <i class="fas fa-download"></i> Download CSV Template
                    </a>
                </li>
                
                <li>
                    <strong>Upload your file</strong>
                    <p>Drag and drop or click to upload</p>
                </li>
            </ol>
            
            <!-- Example Table -->
            <div class="example-table">
                <div class="example-table-title">
                    <i class="fas fa-table"></i> Example CSV Format
                </div>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>firstName</th>
                                <th>lastName</th>
                                <th>dateOfBirth</th>
                                <th>gender</th>
                                <th>weight</th>
                                <th>beltRank</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John</td>
                                <td>Doe</td>
                                <td>2005-03-15</td>
                                <td>male</td>
                                <td>75.5</td>
                                <td>white</td>
                            </tr>
                            <tr>
                                <td>Jane</td>
                                <td>Smith</td>
                                <td>2006-07-22</td>
                                <td>female</td>
                                <td>62.3</td>
                                <td>yellow</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Belt Ranks -->
            <div class="belt-ranks-section">
                <span class="belt-ranks-title">
                    <i class="fas fa-medal"></i> Available Belt Ranks
                </span>
                <div class="badge-list" id="beltRanksList">
                    <span class="badge">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Card -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-cloud-upload-alt"></i> Upload CSV File
        </div>
        <div class="card-body">
            <form id="csvForm" enctype="multipart/form-data" method="POST" action="/tournaments/<%= tournament._id %>/club/<%= club._id %>/batch-upload">
                <div class="drag-drop-area" id="dragDropArea">
                    <i class="fas fa-cloud-upload-alt drag-drop-icon"></i>
                    <h5>Drag and drop your CSV file here</h5>
                    <p>or click to browse your computer</p>
                    <input type="file" id="csvFile" name="csvFile" accept=".csv" style="display: none;">
                </div>
                
                <div class="form-text">
                    <i class="fas fa-info-circle"></i> Accepted format: CSV (.csv) | Maximum file size: 5MB
                </div>

                <div id="fileSelected" style="display: none;">
                    <div class="file-selected-alert">
                        <i class="fas fa-check-circle"></i>
                        <div>
                            <strong>Selected file:</strong> <span id="fileName"></span>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-upload">
                        <i class="fas fa-upload"></i> Upload & Import
                    </button>
                    <a href="/tournaments/<%= tournament._id %>/club/<%= club._id %>" class="btn btn-back">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Fetch available belt ranks
    async function loadBeltRanks() {
        try {
            const response = await fetch('/api/belt-ranks');
            const beltRanks = await response.json();
            const container = document.getElementById('beltRanksList');
            if (beltRanks.length > 0) {
                container.innerHTML = beltRanks.map(br => 
                    `<span class="badge">${br.rank}</span>`
                ).join('');
            } else {
                container.innerHTML = '<span class="badge bg-secondary">No belt ranks available</span>';
            }
        } catch (error) {
            console.error('Error loading belt ranks:', error);
            document.getElementById('beltRanksList').innerHTML = 
                '<span class="badge bg-danger">Unable to load belt ranks</span>';
        }
    }

    // File upload handling
    const dragDropArea = document.getElementById('dragDropArea');
    const csvFileInput = document.getElementById('csvFile');
    const fileSelectedDiv = document.getElementById('fileSelected');
    const fileNameSpan = document.getElementById('fileName');
    const csvForm = document.getElementById('csvForm');

    // Click to browse
    dragDropArea.addEventListener('click', () => csvFileInput.click());

    // File selection
    csvFileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
            updateFileSelection(file);
        }
    });

    // Drag and drop
    dragDropArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        dragDropArea.classList.add('drag-over');
    });

    dragDropArea.addEventListener('dragleave', () => {
        dragDropArea.classList.remove('drag-over');
    });

    dragDropArea.addEventListener('drop', (e) => {
        e.preventDefault();
        dragDropArea.classList.remove('drag-over');
        
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            const file = files[0];
            if (file.type === 'text/csv' || file.name.endsWith('.csv')) {
                csvFileInput.files = files;
                updateFileSelection(file);
            } else {
                alert('Please drop a CSV file');
            }
        }
    });

    function updateFileSelection(file) {
        fileNameSpan.textContent = file.name;
        fileSelectedDiv.style.display = 'block';
    }

    // Form submission
    csvForm.addEventListener('submit', (e) => {
        if (!csvFileInput.files.length) {
            e.preventDefault();
            alert('Please select a CSV file');
        }
    });

    // Load belt ranks on page load
    document.addEventListener('DOMContentLoaded', loadBeltRanks);
</script>
